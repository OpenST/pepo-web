<div class="container-fluid text-center">

    <div class="row align-items-center side-by-side py-6 mt-md-5" style="background-color: #2A293B">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 mr-auto order-2 pt-6 pt-md-0 order-2">
            <h1 class="mb-3" style="color: #fff">Connect with people, not profiles</h1>
            <p style="color: #ffffff;" class="my-5">Join communities of people who share your passions</p>
            <%- include('../partials/shared/_twitterConnect', {twitterRedirectUrl: twitterRedirectUrl}) -%>
        </div>
        <div class="col-12 col-md-6 pr-md-0">
            <img class="img-fluid"
                 src="https://d3attjoi5jlede.cloudfront.net/images/pre-launch/s-b-s-1-v1.png"
                 width="318"
                 alt="Pepo User">
        </div>
    </div>


    <div class="row align-items-center side-by-side py-6">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 ml-auto pb-6 pb-md-0">
            <h1 class="mb-3">Tap into the realness</h1>
            <p class="mt-4 mb-5">Bite-sized videos to get your point across</p>
            <%- include('../partials/shared/_twitterConnect', {twitterRedirectUrl: twitterRedirectUrl}) -%>
        </div>
        <div class="col-12 col-md-6 pr-md-0">
            <div class="videoWrapper">
                <video autoplay loop muted playsinline
                       poster="https://d3attjoi5jlede.cloudfront.net/images/pre-launch/pepo-jumbo-video-cover-2.png"
                       style="width: 300px"
                >
                    <source src="https://d3attjoi5jlede.cloudfront.net/images/pre-launch/pepo-jumbo-video-normal-2.mp4" type="video/mp4">
                </video>
                <div>
                    <a href="javascript:void(0)" class="videoSpeaker mute videoMuteUnMute" title="Click to Unmute">
                        <span></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row align-items-center side-by-side py-6 edge--top position-relative mt-md-6" style="background-color: #2A293B">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 mr-auto pt-6 pt-md-0 order-2">
            <h1 class="mb-3" style="color: #fff">30 seconds never felt so rewarding</h1>
            <p style="color: #ffffff;" class="my-5">Earn real money from anyone, anywhere</p>
            <%- include('../partials/shared/_twitterConnect', {twitterRedirectUrl: twitterRedirectUrl, aClasses: 'btn-secondary', svgClasses: 'red'}) -%>
        </div>
        <div class="col-12 col-md-6 pr-md-0">
            <img class="img-fluid"
                 src="https://d3attjoi5jlede.cloudfront.net/images/pre-launch/peter-pan-revised.png"
                 width="318"
                 alt="Pepo User">
        </div>
    </div>


    <div class="row align-items-center side-by-side py-6" id="refer-to-get">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4 ml-auto pb-6 pb-md-0">
            <h1 class="mb-3">Crypto empowered</h1>
            <p class="mt-4 mb-5">Your wallet, your money, your future</p>
            <a href="https://ostwatch.com/mainnet/" target="_blank"
               class="btn btn-primary"
               title="Check On Mainnet"
               rel="noopener noreferrer">Check On Mainnet
            </a>
        </div>
        <div class="col-12 col-md-6 pr-md-0">
            <img class="img-fluid"
                 src="https://d3attjoi5jlede.cloudfront.net/images/pre-launch/s-b-s-5-v2.png"
                 width="334"
                 alt="Pepo User">
        </div>
    </div>
    <div class="row text-center py-5" style="background-color: #2A293B">
        <div class="col-12">
            <h4 style="color: #FFFFFF">An OST project</h4>
            <p style="color: #FFFFFF" class="my-4">Pepo is designed with love by OST. Meet the team and discover our technology.</p>
            <a href="https://ost.com" target="_blank" class="btn btn-primary px-6" title="Explore OST">Explore OST</a>
        </div>
    </div>
</div>
