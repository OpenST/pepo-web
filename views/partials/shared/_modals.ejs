<section id="downloadModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content" style="padding: 35px 0; border-radius: 5px">
            <div class="modal-header mb-5">
                <h4 class="modal-title" style="color: #ff5566;font-weight: 600">Download The Pepo App!</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="modal-close-icon"></span>
                </button>
            </div>
            <div class="modal-footer d-flex flex-column flex-md-row mx-auto">
                <a href="<%= androidAppLink %>" target="_blank" title="Download Pepo App - Android" class="d-inline-block" rel="noopener noreferrer nofollow">
                    <span class="modal-google-play-icon"></span>
                </a>
                <a href="<%= iosAppLink %>" target="_blank" title="Download Pepo App - iOS" class="ml-md-3 mt-4 mt-md-0" rel="noopener noreferrer nofollow">
                    <span class="modal-app-store-icon"></span>
                </a>
            </div>
        </div>
    </div>
</section>

<section id="reportModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content" style="padding: 35px 0; border-radius: 5px">
            <div class="modal-header">
                <h4 class="modal-title" style="color: #ff5566;font-weight: 600">Report Video</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="modal-close-icon"></span>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-center mb-0">Report video for inappropriate content or abuse ?</p>
            </div>
            <div class="modal-footer mx-auto">
                <a href="javascript:void(0)" title="Report" class="d-inline-block modalLinks report-title" data-dismiss="modal" rel="noopener noreferrer nofollow">Report</a>
                <a href="javascript:void(0)" title="Cancel" class="ml-5 modalLinks" data-dismiss="modal" aria-label="Close">Cancel</a>
            </div>
        </div>
    </div>
</section>

<section id="loginModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm modal-dialog-login " role="document">
        <div class="modal-content modal-content-login p-0">
            <div class="modal-body my-0">
               <div class="logged-out">
                    <div id="twitterSignIn" class="loginBtn">
                        <div class="customBtn my-3">
                            <span class="login-twitter-icon"></span>
                            <span class="buttonText">Continue with Twitter</span>
                        </div>
                    </div>
                    <div id="googleSignIn" class="loginBtn">
                        <div class="customBtn my-3">
                            <span class="login-google-icon"></span>
                            <span class="buttonText">Continue with Gmail</span>
                        </div>
                    </div>
                    <div id="githubSignIn" class="loginBtn">
                        <div class="customBtn my-3">
                            <span class="login-github-icon"></span>
                            <span class="buttonText">Continue with Github</span>
                        </div>
                    </div>
                    <div id="appleSignIn" class="loginBtn">
                        <div class="customBtn my-3">
                            <span class="login-apple-id-icon"></span>
                            <span class="buttonText">Continue with Apple ID</span>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
</section>

<section id="logoutModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm modal-dialog-login" role="document">
        <div class="modal-content modal-content-login p-2 border-0">
            <div class="modal-body px-0 my-0">
                <div id="logoutBtn" class="logged-in buttonText ml-0 d-flex align-items-center"><span class="logout-icon mr-2"></span>Logout</div>
                <div id="createSession" class="create-session buttonText ml-0 d-flex align-items-center"></span>Create Session</div>
            </div>
        </div>
    </div>
</section>

<!-- create session modal -->
<section class="modal fade" id="create-session-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h6 class="modal-title w-100 font-weight-bold">Create Session</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3" id="modal-body">
              <div id="beforeChange" class="beforeChange">
                <div class="md-form mb-5">
                  <label data-error="wrong" data-success="right" for="transaction-amount">Spending Limit in Higher Unit</label>
                  <input type="number" id="j-spending-limit" class="form-control validate"></div>
              <div class="md-form mb-4">
                  <div class="form-group">
                    <label for="sel1">Duration(in days):</label>
                    <select class="form-control" id="j-duration">
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer d-flex justify-content-center" id="modal-footer">
              <button class="btn btn-default" id="j-create-btn">Create</button>
            </div>
        </div>
    </div>
</section>

<!-- after create session -->
<section class="modal fade" id="afterSession" style="overflow: auto;" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h6 class="modal-title w-100 font-weight-bold">Session Details</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3" id="modal-body">
              <div class="row" style="display: flex; margin-top:50px;">
                <!-- <div class="col-md-6 col-sm-12"> -->
                  <div class="card" style="height:100%">
                    <div class="card-header">
                      <b>Create Session</b>
                    </div>
                    <div class="card-body" style="max-height: 250px; ">
                      <div class="md-form mb-5" >
                        <label data-error="wrong" data-success="right" style="font-weight: bold;">Spending Limit: </label>
                        <br />
                        <label data-error="wrong" data-success="right" style="font-weight: bold;">In Higher Unit:</label>
                        <label data-error="wrong" data-success="right" id="spending-limit-label-higher"></label>
                        <br />
                        <label data-error="wrong" data-success="right" style="font-weight: bold;">In Lower Unit:</label>
                        <label data-error="wrong" data-success="right" id="spending-limit-label-lower" > </label>
                        <br />
                        <label data-error="wrong" data-success="right" style="font-weight: bold;">Expires On: </label>
                        <br />
                        <label data-error="wrong" data-success="right" id="expiry-label" > </label>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row" style="display: flex; margin-top:50px;">
                <!-- <div class="col-md-6 col-sm-12"> -->
                  <div class="card" style="height:100%">
                    <div class="card-header">
                      <ul class="nav nav-tabs card-header-tabs">
                        <li class="navbar-text" style="margin-right:20px"><b>QR output</b></li>
                        <li class="nav-item">
                          <a class="nav-link active" data-toggle="tab" role="tab" href="#oneString">QR Code</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" data-toggle="tab" role="tab" href="#twoQR">Error</a>
                        </li>
                      </ul>
                    </div>
                    <div class="tab-content">
                      <div id="oneString" role="tabpanel" class="card-body tab-pane active" >
                        <div id="QrMainDiv" class="qr-code-wrap"></div>
                      </div>
                        <div id="twoQR" role="tabpanel" class="card-body tab-pane">
                            <b>No Error</b>
                        </div>
                    </div>
                  </div>
                </div>
             

            </div>
            <div class="modal-footer d-flex justify-content-center" id="modal-footer"></div>
        </div>
    </div>
</section>
